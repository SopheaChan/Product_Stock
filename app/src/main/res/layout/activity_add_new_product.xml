<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/add_product_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@color/color_line_style"
        android:textSize="40dp"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/img_product_image"
        android:layout_width="100dp"
        android:layout_height="112dp"
        android:background="@drawable/image_border"
        android:layout_below="@id/add_product_activity_title"
        android:layout_marginTop="29dp"
        android:src="@mipmap/browse_image1"
        android:scaleType="fitXY"/>
    <EditText
        android:id="@+id/text_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_toEndOf="@id/img_product_image"
        android:layout_below="@id/add_product_activity_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:id="@+id/text_product_quantity_in_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_toEndOf="@id/img_product_image"
        android:layout_below="@id/text_product_name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:id="@+id/text_import_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Import Date"
        android:maxLines="1"
        android:textSize="14sp"
        android:layout_toEndOf="@id/img_product_image"
        android:layout_below="@id/text_product_quantity_in_stock"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>
    <Button
        android:id="@+id/button_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Upload"
        android:background="@color/color_button"
        android:layout_below="@id/img_product_image"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"/>
    <ProgressBar
        android:id="@+id/progress_bar_3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/button_upload"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_update_info"
        android:textSize="11sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>